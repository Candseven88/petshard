{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "noEmit": false,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["ES2020", "DOM"]
  },
  "include": [
    "src/lib/seo-content-generator/**/*"
  ],
  "exclude": [
    "src/lib/seo-content-generator/__tests__/**/*",
    "src/app/**/*",
    "src/components/**/*",
    "node_modules"
  ]
}